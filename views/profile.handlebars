<main>
    <div class="card-wide" id ="sticky">
        <h1>{{firstName}} {{lastName}} </h1>
        <img src="/users/profilepic/{{id}}" onerror="this.src='/public/images/Avatar.png'" alt="Profile Picture">
        <p>{{email}}</p>
        <p>{{city}}</p>
        <p>{{state}}</p>
        <p>{{age}}</p>
        <p><a href="/users/myprofile" class="btn">Edit Profile</a></p>
    </div>
    
    <div class="card-wide" id="right">
        <h2>Reviews</h2>
        {{#each reviews}}
        <div>
            <div class="card-full">
                <div class="reviewHeading">
                    <div class="reviewerName">
                        <p class = "restaurant_name"><a href="/restaurants/{{this.restaurant._id}}">{{this.restaurant.name}}</a></p>
                    </div>
                    <div class="reviewerRating">
                        <p class = "restaurant_rating"><a href="/reviews/{{this.review._id}}">Your Rating: {{this.review.rating}}</a></p>
                    </div>
                </div>
                <div class = "reviewText">
                    <p>{{this.review.reviewText}}</p>
                </div>
                <div class="dropdown">
                    <button class="dropbtn">Options</button>
                    <div class="dropdown-content">
                        <p><a href="/reviews/{{this.review._id}}/edit" class="btn">Edit Review</a></p>
                        <p><a href="../reviews/{{this.restaurant._id}}/{{this.review._id}}/delete" class="btn">Delete Review</a></p>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    
</main>