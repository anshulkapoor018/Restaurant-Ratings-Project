<main>
    <div class="card-full">
        <h2>{{firstName}} {{lastName}} </h2>
        <img src="{{profilePicture}}">
        <p><a href="/users/myprofile">Edit Profile</a></p>
        <h2>Reviews</h2>
        {{#each reviews}}
        <div>
            <h3><a href="/restaurants/{{this.restaurant._id}}">{{this.restaurant.name}}</a></h3>
            <p><a href="/reviews/{{this.review._id}}">{{this.review.rating}}</a></p>
            <p>{{this.review.reviewText}}</p>
            <p><a href="/reviews/{{this.review._id}}/edit">Edit Review</a></p>
            <p><a href="../reviews/{{this.restaurant._id}}/{{this.review._id}}/delete">Delete Review</a></p>
            <br/>
        </div>
        {{/each}}
    </div>
</main>