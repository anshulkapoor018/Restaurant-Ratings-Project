<main>
    <br>
    <div class = "card-full">
        <form if="edit-review" action="/reviews/{{reviewId}}/edit" method="post">
            <label for="rating"><h4>Rating</h4>
                <input type="number" id="rating" name="rating" value={{rating}} class="inputFields">
            </label>
            <br>
            <label for="reviewText"><h4>Review Text</h4>
                <input type="text" id="reviewText" name="reviewText" value="{{reviewText}}" class="inputFields">
            </label>
            <button type="submit" class="btn">Confirm</button>
        </form>
    </div>
    <div>
        {{#if hasError}}
        <div class="error">
            <ul>
                {{#each error}}
                    <li>
                        {{this}}
                    </li>
                {{/each}}
            </ul>
        </div>
        {{/if}}
    </div>
</main>