            </label>
            <label for="confirm">
                <input type="password" id="confirm" name="confirm" class="inputFields" placeholder="Confirm Password">
            </label>
            <label>
                <button type="submit" class = "btn">Confirm</button>
            </label>
        </form>

        <div>
            {{#if hasErrors}}
                <ul class="error">
                    {{#each errors}}
                        <li>
                            {{this}}
                        </li>
                    {{/each}}
                </ul>
            {{/if}}
        </div>

    </div>
</main>