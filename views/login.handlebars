                    </select>
                </label>
                <label>
                    <button type="submit" class="submit">Signup</button>
                </label>
                
            </form>
        </div>
        <div>
            {{#if hasErrors}}
                <ul class="error">
                    {{#each errors}}
                        <li>
                            {{this}}
                        </li>
                    {{/each}}
                </ul>
            {{/if}}
        </div>
    </div>
</main>