<main>
    <div class="login_container">
        <div class="login_form">
            <header id = "login_headers" align="center">Login</header>
            <form id="login-form" name ="loginForm" class = "form1" action="/users/login" method="POST">
                <label>
                    <input type="text" name="username" id="username" class = "inputFields" placeholder="Enter your Username" />  
                </label>
                <label>
                    <input type="password" name="password" id="password" class = "inputFields" placeholder="Enter your Password" />
                </label>
                <button type="submit" class="submit">Login</button>
            </form>
        </div>
        <div class="signup_form">
            <header id = "login_headers" align="center">Signup</header>
            <form id="signup-form" name ="SignupForm" class = "form1" action="/users/signup" method="POST">
                <label>
                    <input type="text" name="firstname" id="firstname" class = "inputFields" placeholder="Enter your First Name" />  
                </label>
                <label>
                    <input type="text" name="lastname" id="lastname" class = "inputFields" placeholder="Enter your Last Name" />
                </label>
                <label>
                    <input type="number" name="age" id="age" class = "inputDateFields" placeholder="Enter your Age" />
                </label>
                <label>
                    <input type="text" name="username" id="username" class = "inputFields" placeholder="Enter your Email" />  
                </label>
                <label>
                    <input type="password" name="password" id="password" class = "inputFields" placeholder="Enter a Password" />
                </label>
                <label>
                    <select name="state" class = "selectFields" required >
                        <option value="" disabled selected>Select your State</option>
