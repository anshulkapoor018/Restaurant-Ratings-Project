<main>
    <h1>Join Us!</h1>
        <div class="card-wide">
            <h2>Login</h2>
            <form id="login-form" name ="loginForm" action="/users/login" method="POST">
                <label>
                    <input type="text" name="username" id="username" class = "inputFields" placeholder="Enter your Username/Email" />  
                </label>
                <label>
                    <input type="password" name="password" id="password" class = "inputFields" placeholder="Enter your Password" />
                </label>
                <button type="submit" class="btn">Login</button>
            </form>
        </div>

    <div class="card-wide" id="new-content">
        <h2>Sign Up</h2>
        <form id="signup-form" name ="SignupForm" class = "form1" action="/users/signup" method="POST">
            <label>
                <input type="text" name="firstname" id="firstname" class = "inputFields" placeholder="Enter your First Name" required/>  
            </label>
            <label>
                <input type="text" name="lastname" id="lastname" class = "inputFields" placeholder="Enter your Last Name" required/>
            </label>
            <label>
                <input type="number" name="age" id="age" class = "inputFields" placeholder="Enter your Age" required/>
            </label>
            <label>
                <input type="text" name="username" id="username" class = "inputFields" placeholder="Enter your Email" required/>  
            </label>
            <label>
                <input type="password" name="password" id="password" class = "inputFields" placeholder="Enter a Password" required/>
            </label>
            <label>
                <input type="text" name="city" id="city" class = "inputFields" placeholder="Enter your City Name" required/>  
            </label>
            <label>
                <select name="state" class = "inputFields" id = "state" required >
                    <option value="" disabled selected>Select your State</option>
