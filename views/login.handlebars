            </label>
            <br/>
            <label>
                <button type="submit" class="btn">Signup</button>
            </label>
            
        </form>
    </div>

    <div>
        {{#if hasErrors}}
        <div class="error">
            <ul>
                {{#each errors}}
                    <li>
                        {{this}}
                    </li>
                {{/each}}
            </ul>
        </div>
        {{/if}}
    </div>
    <script
      src="https://code.jquery.com/jquery-3.2.1.min.js"
