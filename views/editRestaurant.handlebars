<div class="card-center">
    <h3>Edit Restaurant</h3>
    <form method="POST" action="/restaurants/edit/">
        <input type="text" name="_id" value={{id}} class="inputFields" readonly />
        <input type="text" name="name" placeholder="Restaurant Name" class="inputFields" />
        <input type="text" name="website" placeholder="Restaurant Website" class="inputFields" />
        <input type="text" name="category" placeholder="Restaurant Category" class="inputFields" />
        <input type="text" name="address" placeholder="Restaurant Address" class="inputFields" />
        <input type="text" name="city" placeholder="Restaurant City" class="inputFields" />
        <input type="text" name="state" placeholder="Restaurant State" class="inputFields" />
        <input type="text" name="zip" placeholder="Restaurant Zip Code" class="inputFields" />
        <input type="text" name="longitude" placeholder="Restaurant Longitude" class="inputFields" />
        <input type="text" name="latitude" placeholder="Restaurant Latitude" class="inputFields" />
        <input type="submit" value="Edit Restaurant" class="btn" />
    </form>
</div>